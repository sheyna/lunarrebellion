<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="js/socketHandler.js"></script>

<section class="page">
  <header>
    <h1>Lunar Rebellion</h1>
    <h2>Welcome {{username}}</h2>
  </header>
  <section id="contentArea">
    <section id="sideContent" class="playerInfoSide">
      <p>Player:</p>
      <p class="player-card">{{player}}</p>
      <aside class="tool">
        <div id="diceResult">
          <small id="diceContent">Click to Roll Dice</small>
        </div>
        <button id="rollDiceBtn">Roll Dice</button>
      </aside>
      <p><a href="/" id="newGameBtn">New Game</a></p>
    </section>
    <section class="playArea">
      <div class="board" id="boardTiles">
          {{#each tiles}}
            <div class="boardTile" id="{{id}}" data-boxposition="{{@index}}" >
              <span>{{title}}</span>
            </div>
          {{/each}}
      </div>
    </section>
    <section class="chat">
      <ul id="messages"></ul>
      <form id="chatBox" action="">
        <input id="m" autocomplete="off" placeholder="Type chat message here" />
        <button id="chatSubmitBtn">Send</button>
      </form>
    </section>


  </section>
</section>

<script src="js/addPlayerAvatar.js"></script>
<script src="js/moveAvatar.js"></script>
<script>
  $(document).ready(function() {
    var currentPosition = addPlayerAvatar("{{player}}");

    // add the event listeners for all the cells:
    var tileCells = document.querySelectorAll(".boardTile");
    result = [];
    for (var z = 0; z < tileCells.length; z++) {
      result = tileCells[z];
      result.addEventListener('click', function() {
        currentPosition = moveAvatar(this, currentPosition);
      });
    }
  })
</script>
<script src="js/rollDice.js"></script>


